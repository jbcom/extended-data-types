# direnv configuration for extended-data-types
# This file is automatically sourced when entering the directory

# Apply ruler configuration on shell entry
# This ensures AI agent configs are always up-to-date
if command -v npx &> /dev/null; then
  npx @intellectronica/ruler apply --nested --no-backup 2>/dev/null || true
fi

# Activate Python virtual environment if present
if [ -d ".venv" ]; then
  source .venv/bin/activate
fi

# Set up environment for local development
export PYTHONPATH="${PWD}/src:${PYTHONPATH:-}"
